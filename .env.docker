# Environment variables for Docker
# Copy this file to .env and fill in your actual values

# MongoDB Configuration
MONGO_URI=mongodb://mongodb:27017/healthcare_prototype

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your_super_secure_jwt_secret_key_change_this

# Server Configuration
PORT=3001
NODE_ENV=production

# Google Gemini AI (Required for AI features)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=YOUR_GEMINI_API_KEY

# Twilio Configuration (Optional - for SMS/OTP)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUND_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=YOUR_TWILIO_PHONE_NUMBER
TWILIO_VERIFY_SERVICE_SID=YOUR_TWILIO_VERIFY_SERVICE_SID

# Stripe Configuration (Optional - for payments)
STRIPE_SECRET_KEY=sk_test_...

# Claude AI Configuration (Optional - alternative AI)
CLAUDE_API_KEY=YOUR_API_KEY_HERE
